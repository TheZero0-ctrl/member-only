
<div class="heading text-center font-bold text-2xl m-5 text-gray-800">New Post</div>
<%= form_with model: @post, method: "post" do |form| %>
  <div class="editor mx-auto w-10/12 flex flex-col text-gray-800 border border-gray-300 p-4 shadow-lg max-w-2xl">
    <%= form.text_field :title, class: "title bg-gray-100 border border-gray-300 p-2 mb-4 outline-none", placeholder: "Title" %>
    <%= form.text_area :body, class: "description bg-gray-100 mb-4 sec p-3 h-60 border border-gray-300 outline-none", placeholder: "describe everything about this post here" %>
    <div class="buttons flex">
      <%= form.submit class: "btn border border-indigo-500 p-1 px-4 font-semibold cursor-pointer text-gray-200 ml-2 bg-indigo-500" %>
    </div>
  </div>
<% end %>